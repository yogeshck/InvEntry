<UserControl x:Class="InvEntry.Views.VoucherEntryViewV1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:InvEntry.ViewModels" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

        <UserControl.DataContext>
            <vm:VoucherEntryViewModelV1 />
        </UserControl.DataContext>

        <StackPanel Margin="20">
        <StackPanel Orientation="Horizontal"
                    Margin="0 0 0 10">
            <TextBlock Text="Invoice Number:"
                       Margin="0 0 5 0" />
            <dxe:TextEdit Width="100"
                          EditValue="{Binding InvoiceNumber}" />
            <TextBlock Text="Customer:"
                       Margin="20 0 5 0" />
            <dxe:ComboBoxEdit Width="200"
                              ItemsSource="{Binding Customers}"
                              DisplayMember="CustomerName"
                              SelectedItem="{Binding SelectedCustomer}" />
        </StackPanel>

        <dxg:GridControl ItemsSource="{Binding Vouchers}"
                     AutoGenerateColumns="None"
                     Height="200">
        <dxg:GridControl.Columns>
            <dxg:GridColumn FieldName="VoucherType"
                            Header="Type" />
            <dxg:GridColumn FieldName="Amount"
                            Header="Amount" />
            <dxg:GridColumn FieldName="Remarks"
                            Header="Remarks" />
        </dxg:GridControl.Columns>
    </dxg:GridControl>

    <Button Content="Add Voucher Entry"
            Command="{Binding AddVoucherCommand}"
            Margin="0 10 0 0" />
    <Button Content="Save All Vouchers"
            Command="{Binding SaveCommand}"
            Background="LightGreen" />
    </StackPanel>
    
</UserControl>
