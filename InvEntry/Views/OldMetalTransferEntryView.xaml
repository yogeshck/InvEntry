<UserControl x:Class="InvEntry.Views.OldMetalTransferEntryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm" 
             xmlns:local="clr-namespace:InvEntry.Views"
             xmlns:viewmodels="clr-namespace:InvEntry.ViewModels"
             xmlns:ext="clr-namespace:InvEntry.Extension"
             xmlns:behavior="clr-namespace:InvEntry.Behavior" 
             xmlns:dx1="clr-namespace:DevExpress.XtraEditors;assembly=DevExpress.XtraEditors.v24.2"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodels:OldMetalTransferEntryViewModel}"
             DataContext="{ext:DISource Type=viewmodels:OldMetalTransferEntryViewModel}"
             d:DesignHeight="450" HorizontalAlignment="Left" Width="1471">

    <Grid>
        
        <!-- Keyboard Shortcut -->
    <dxmvvm:Interaction.Behaviors>
        <dxmvvm:KeyToCommand KeyGesture="CTRL+S"
                             Command="{Binding CreateStockTransferCommand}" />
    </dxmvvm:Interaction.Behaviors>   


        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= TOOLBAR ================= -->
        <dxb:BarContainerControl Grid.Row="0"
                                 Width="400">
            <dxb:MainMenuControl>
                <dxb:BarButtonItem Content="Reset"
                                   Glyph="{dx:DXImage 'Images/Actions/Refresh_32x32.png'}"
                                   BarItemDisplayMode="ContentAndGlyph"
                                   Command="{Binding ResetOldMetalTransCommand}" />

                <dxb:BarButtonItem Content="Save Transfer"
                                   Glyph="{dx:DXImage 'Images/Save/Save_32x32.png'}"
                                   BarItemDisplayMode="ContentAndGlyph"
                                   Command="{Binding CreateStockTransferCommand}" />

                <dxb:BarButtonItem Content="Print"
                                   Alignment="Far"
                                   Glyph="{dx:DXImage 'Images/Print/PrintViaPDF_32x32.png'}"
                                   BarItemDisplayMode="ContentAndGlyph"
                                   Command="{Binding PrintStockTransferCommand}" />
            </dxb:MainMenuControl>
        </dxb:BarContainerControl>

        <!-- ================= FORM ================= -->
        <dxlc:LayoutControl Grid.Row="1"
                            Padding="50"
                            Width="500">

            <dxlc:LayoutGroup Header="Old Metal Transfer"
                              View="GroupBox"
                              Orientation="Vertical">


                <dxlc:LayoutItem Label="From Branch" FontSize="20" Padding="10">
                    <dxe:TextEdit EditValue="{Binding FromBranch}"
                                  Width="200"
                                  Height="35"
                                  IsReadOnly="True"
                                  FontSize="14"/>
                </dxlc:LayoutItem>

                <dxlc:LayoutItem Label="Transfer To" FontSize="20" Padding="10">
                    <dxe:ComboBoxEdit ItemsSource="{Binding ReceipientStrList}"
                                  Width="200"
                                  Height="35"
                                          EditValue="{Binding SentTo}"
                                          FontSize="14"/>
                </dxlc:LayoutItem>

                <dxlc:LayoutItem Label="Transfer #" FontSize="20" Padding="10">
                    <dxe:TextEdit EditValue="{Binding Header.EstNbr}"
                                  Width="200"
                                  Height="35"
                                      IsReadOnly="True"
                                      FontSize="14"/>
                </dxlc:LayoutItem>

                <dxlc:LayoutItem Label="Date" FontSize="20" Padding="10">
                    <dxe:DateEdit EditValue="{Binding Header.EstDate}"
                                  Width="200"
                                  Height="35"
                                      FontSize="14"/>
                </dxlc:LayoutItem>

                <dxlc:LayoutItem Label="Old Metal" FontSize="20" Padding="10">
                    <dxe:ComboBoxEdit ItemsSource="{Binding OldMetalList}"
                                  Width="200"
                                  Height="35"
                                   EditValue="{Binding OldMetalIdUI}"
                                  FontSize="14"/>
                </dxlc:LayoutItem>

                <dxlc:LayoutItem Label="Gross Weight" FontSize="20" Padding="10">
                    <dxe:TextEdit EditValue="{Binding ProductGrossWeight}"
                                  Width="200"
                                  Height="35"
                                  FontSize="14"/>
                </dxlc:LayoutItem>

                <dxlc:LayoutItem Label="Notes" FontSize="20" Padding="10">
                    <dxe:MemoEdit EditValue="{Binding OMTransDesc}"
                                                                        Width="300"
                                  Height="80"/>
                </dxlc:LayoutItem>

            </dxlc:LayoutGroup>

        </dxlc:LayoutControl>
    </Grid>
</UserControl>
