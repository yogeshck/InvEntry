<UserControl x:Class="InvEntry.Views.OldMetalTransferEntryView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:InvEntry.Views"
                 xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
                 xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                 xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                 xmlns:viewmodels="clr-namespace:InvEntry.ViewModels"
                 xmlns:ext="clr-namespace:InvEntry.Extension"
                 xmlns:behavior="clr-namespace:InvEntry.Behavior"
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
             mc:Ignorable="d"
                 d:DesignHeight="800"
                 d:DesignWidth="500"
                 d:DataContext="{d:DesignInstance Type=viewmodels:VoucherEntryViewModel}"
                 DataContext="{ext:DISource Type=viewmodels:VoucherEntryViewModel}">

        <!-- Keyboard shortcut -->
    <dxmvvm:Interaction.Behaviors>
        <dxmvvm:KeyToCommand KeyGesture="CTRL+S"
                             Command="{Binding SaveVoucherCommand}" />
    </dxmvvm:Interaction.Behaviors>

        <UserControl.Resources>
            <!-- Numeric mask style for standalone TextEdit -->
            <Style x:Key="NumberFormatWtStyle"
                   TargetType="{x:Type dxe:TextEdit}">
                <Setter Property="MaskType"
                        Value="Numeric" />
                <Setter Property="Mask"
                        Value="######.000" />
                <Setter Property="MaskShowPlaceHolders"
                        Value="False" />
                <Setter Property="MaskUseAsDisplayFormat"
                        Value="True" />
                <Setter Property="dxe:NumericMaskOptions.AlwaysShowDecimalSeparator"
                        Value="False" />
            </Style>
        </UserControl.Resources>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Toolbar Buttons -->
            <dxb:BarContainerControl>
                <dxb:MainMenuControl>
                <dxb:BarButtonItem x:Name="reset"
                                   Content="Reset Voucher"
                                   Glyph="{dx:DXImage 'Images/Actions/Refresh_32x32.png'}"
                                   GlyphSize="Large"
                                   GlyphAlignment="Top"
                                   BarItemDisplayMode="ContentAndGlyph"
                                   Command="{Binding ResetVoucherCommand}" />

                <dxb:BarButtonItem x:Name="PettyCashVoucher"
                                       Content="Petty Cash"
                                       Glyph="{dx:DXImage 'Images/Spreadsheet/FunctionsFinancial_32x32.png'}"
                                       GlyphSize="Large"
                                       GlyphAlignment="Top"
                                       BarItemDisplayMode="ContentAndGlyph"
                                       Command="{Binding CreatePettyCashVoucherCommand}" />

                    <dxb:BarButtonItem x:Name="Save"
                                       Content="Save Transfer"
                                       Glyph="{dx:DXImage 'Images/Save/Save_32x32.png'}"
                                       GlyphSize="Large"
                                       GlyphAlignment="Top"
                                       BarItemDisplayMode="ContentAndGlyph"
                                       Command="{Binding SaveVoucherCommand}" />

                    <dxb:BarButtonItem x:Name="btnPrint"
                                       Content="Print"
                                       Glyph="{dx:DXImage 'Images/Print/PrintViaPDF_32x32.png'}"
                                       GlyphSize="Large"
                                       GlyphAlignment="Top"
                                       BarItemDisplayMode="ContentAndGlyph"
                                       Alignment="Far"
                                       Command="{Binding VoucherPrintCommand}" />
                </dxb:MainMenuControl>
            </dxb:BarContainerControl>
            
        <!-- Form Layout -->
        <dxlc:LayoutControl Grid.Row="1"
                            Width="400">

            <dxlc:LayoutGroup Orientation="Vertical"
                                  View="GroupBox"
                                  Header="Voucher"
                                  Margin="5">

                    <dxlc:LayoutGroup Orientation="Vertical"
                                      View="Group">

                    <dxlc:LayoutItem Label="From "
                                     FontSize="14"
                                     Margin="5">
                        <dxe:TextEdit Height="42"
                                      FontSize="16"
                                      CharacterCasing="Upper"
                                      EditValue="{Binding Voucher.VoucherNbr}" />
                    </dxlc:LayoutItem>

                    <dxlc:LayoutItem Label="Transfer To "
                                     FontSize="14"
                                     Margin="5">
                        <dxe:ComboBoxEdit Height="42"
                                          FontWeight="ExtraBold"
                                          ItemsSource="{Binding TransactionTypeList}"
                                          EditValue="{Binding TransactionType}" />
                    </dxlc:LayoutItem>
                        
                    <dxlc:LayoutItem Label="Transfer #"
                                     FontSize="14"
                                     Margin="5">
                        <dxe:TextEdit Height="42"
                                      FontSize="16"
                                      CharacterCasing="Upper"
                                      EditValue="{Binding Voucher.VoucherNbr}" />
                    </dxlc:LayoutItem>

                    <dxlc:LayoutItem Label="Date"
                                     FontSize="14"
                                     Margin="5">
                        <dxe:DateEdit Height="42"
                                      IsReadOnly="False"
                                      ShowBorder="False"
                                      EditValue="{Binding Voucher.VoucherDate}">
                            
                            <dxe:DateEdit.StyleSettings>
                                <dxe:DateEditNavigatorStyleSettings />
                            </dxe:DateEdit.StyleSettings>
                            
                        </dxe:DateEdit>
                        
                    </dxlc:LayoutItem>

                    <dxlc:LayoutItem Label="Type"
                                     FontSize="14"
                                     Margin="5">
                        <dxe:TextEdit Height="42"
                                      IsReadOnly="True"
                                      ShowBorder="False"
                                      FontWeight="ExtraBold"
                                      EditValue="{Binding Voucher.Mode}" />
                    </dxlc:LayoutItem>

                    <dxlc:LayoutItem Label="Gross Wt"
                                         Margin="5">
                        <dxe:TextEdit Style="{StaticResource NumberFormatWtStyle}"
                                      EditValue="{Binding Voucher.TransAmount, Mode=TwoWay}"
                                      Height="42"
                                      FontSize="16"
                                      Margin="2" />

                        <!--MaskType="Numeric" /> -->

                    </dxlc:LayoutItem>

                        <dxlc:LayoutItem Label="Notes"
                                         Margin="5">
                            <dxe:TextEdit Height="80"
                                          FontSize="16"
                                          HorizontalContentAlignment="Left"
                                          VerticalContentAlignment="Top"
                                          AcceptsReturn="True"
                                          EditValuePostMode="Immediate"
                                          EditValue="{Binding VoucherTransDesc}" />
                        </dxlc:LayoutItem>

                    </dxlc:LayoutGroup>

                </dxlc:LayoutGroup>
            </dxlc:LayoutControl>
        </Grid>
    </UserControl>