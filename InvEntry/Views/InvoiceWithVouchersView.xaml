<UserControl x:Class="InvEntry.Views.InvoiceWithVouchersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:InvEntry.Views"
             xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:viewmodels="clr-namespace:InvEntry.ViewModels"
             xmlns:ext="clr-namespace:InvEntry.Extension"
             xmlns:behavior="clr-namespace:InvEntry.Behavior"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodels:InvoiceWithVouchersViewModel}"
             DataContext="{ext:DISource Type=viewmodels:InvoiceWithVouchersViewModel}"
             d:DesignHeight="700"
             d:DesignWidth="1400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Search Panel -->
            <RowDefinition Height="400" />
            <!-- Main Content -->
            <RowDefinition Height="Auto" />
            <!-- Adjustment Panel -->
        </Grid.RowDefinitions>

        <!-- 🔍 Search Panel  <dxe:ComboBoxEdit  ItemsSource="{Binding Customers}"    SelectedItem="{Binding SelectedCustomer}" DisplayMember="CustomerName"-->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    Margin="5">
            <dxe:TextEdit EditValue="{Binding SearchOption.Filter1}"
                              Width="200"
                              FontSize="15" />
            <dxe:DateEdit EditValue="{Binding SearchOption.From}"
                          Width="120"
                          Margin="10,0"
                          FontSize="15" />
            <dxe:DateEdit EditValue="{Binding SearchOption.To}"
                          Width="120"
                          Margin="10,0"
                          FontSize="15" />
            <Button Content="Refresh"
                    Command="{Binding RefreshInvoicesCommand}"
                    Margin="10,0"
                    FontSize="15" />
        </StackPanel>

        <!-- 📄 Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <!-- Invoices -->
                <ColumnDefinition Width="3*" />
                <!-- Customer + Receipts -->
            </Grid.ColumnDefinitions>

            <!-- 🧾 Invoice Grid -->
            <dxg:GridControl Grid.Column="0"
                             x:Name="OsInvoicesGrid"
                             ItemsSource="{Binding OsInvoices}"
                             SelectedItem="{Binding SelectedInvoice}"
                             AutoGenerateColumns="None"
                             FontSize="14">
                <dxmvvm:Interaction.Behaviors>
                    <dxmvvm:EventToCommand EventName="SelectedItemChanged"
                                           Command="{Binding SelectionInvoiceChangedCommand}" />
                </dxmvvm:Interaction.Behaviors>
                <dxg:GridControl.View>
                    <dxg:TableView ShowGroupPanel="False"
                                   FontSize="14"
                                   AutoWidth="False"
                                   AllowEditing="False" />
                </dxg:GridControl.View>

                <dxg:GridControl.Columns>
                    <dxg:GridColumn FieldName="InvNbr"
                                    Header="Invoice #"
                                    Width="70" />
                    <dxg:GridColumn FieldName="InvDate"
                                    Header="Date"
                                    Width="80" />
                    <dxg:GridColumn FieldName="AmountPayable"
                                    Header="Receivable"
                                    Width="120">
                        <dxg:GridColumn.EditSettings>
                            <dxe:TextEditSettings MaskType="Numeric"
                                                  MaskUseAsDisplayFormat="True"
                                                  Mask="C2" />
                        </dxg:GridColumn.EditSettings>
                    </dxg:GridColumn>
                    <dxg:GridColumn FieldName="RecdAmount"
                                    Header="Received"
                                    Width="120">
                        <dxg:GridColumn.EditSettings>
                            <dxe:TextEditSettings MaskType="Numeric"
                                                  MaskUseAsDisplayFormat="True"
                                                  Mask="C2" />
                        </dxg:GridColumn.EditSettings>
                    </dxg:GridColumn>
                    <dxg:GridColumn FieldName="InvBalance"
                                    Header="Balance"
                                    Width="120">
                        <dxg:GridColumn.EditSettings>
                            <dxe:TextEditSettings MaskType="Numeric"
                                                  MaskUseAsDisplayFormat="True"
                                                  Mask="C2" />
                        </dxg:GridColumn.EditSettings>
                    </dxg:GridColumn>
                    <dxg:GridColumn FieldName="PaymentDueDate"
                                    Header="Due Date"
                                    ReadOnly="True"
                                    Width="90" />
                </dxg:GridControl.Columns>
            </dxg:GridControl>

            <!-- 👤 Customer Info + 💳 Receipts -->
            <StackPanel Grid.Column="1"
                        Margin="10">
                <!-- Customer Info -->
                <GroupBox Header="Customer Information"
                          FontSize="16"
                          FontWeight="Bold"
                          Padding="10">
                    <StackPanel>
                        <TextBlock Text="{Binding SelectedCustomer.CustomerName}"
                                   FontSize="14" />
                        <TextBlock Text="{Binding SelectedCustomer.MobileNbr}"
                                   FontSize="14" />
                        <TextBlock Text="{Binding SelectedCustomer.Address.City}"
                                   FontSize="14" />
                    </StackPanel>
                </GroupBox>

                <!-- Receipts Grid -->
                <dxg:GridControl ItemsSource="{Binding SelectedInvoice.ReceiptLines}"
                                 AutoGenerateColumns="None"
                                 FontSize="13"
                                 Margin="0,10,0,0"
                                 Height="250">
                    <dxg:GridControl.View>
                        <dxg:TableView ShowGroupPanel="False"
                                       AllowEditing="False"
                                       ShowTotalSummary="True" />
                    </dxg:GridControl.View>
                    <dxg:GridControl.Columns>
                        <dxg:GridColumn FieldName="TransactionType"
                                        Header="Type"
                                        Width="100" />
                        <dxg:GridColumn FieldName="InternalVoucherNbr"
                                        Header="Doc Nbr"
                                        Width="100" />
                        <dxg:GridColumn FieldName="InternalVoucherDate"
                                        Header="Doc Date"
                                        Width="100" />
                        <dxg:GridColumn FieldName="AdjustedAmount"
                                        Header="Amount"
                                        Width="100">
                            <dxg:GridColumn.EditSettings>
                                <dxe:TextEditSettings Mask="C2"
                                                      MaskType="Numeric"
                                                      MaskUseAsDisplayFormat="True" />
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="Remarks"
                                        Header="Remarks"
                                        Width="200" />
                    </dxg:GridControl.Columns>
                </dxg:GridControl>
            </StackPanel>
        </Grid>

        <!-- ➕ Adjustment Panel -->
        <GroupBox Header="Adjust Outstanding"
                  Grid.Row="2"
                  Margin="10">
            <StackPanel Orientation="Horizontal">
                <dxe:ComboBoxEdit ItemsSource="{Binding PaymentModeList}"
                                  SelectedItem="{Binding SelectedPaymentType}"
                                  Width="150"
                                  FontSize="14" />
                <dxe:TextEdit EditValue="{Binding AdjustmentAmount}"
                              Mask="C2"
                              MaskType="Numeric"
                              MaskUseAsDisplayFormat="True"
                              Width="100"
                              Margin="10,0" 
                              FontSize="14"/>
                <dxe:DateEdit EditValue="{Binding PaidOn}"
                              Width="120"
                              Margin="10,0"
                              FontSize="14" />
                <TextBox Text="{Binding AdjustmentRemarks}"
                         Width="200"
                         Margin="10,0"
                         FontSize="14" />
                <Button Content="Apply Adjustment"
                        Command="{Binding ApplyAdjustmentCommand}"
                        Background="Green"
                        Foreground="White"
                        Width="150"
                        Margin="10,0" />
            </StackPanel>
        </GroupBox>

        <!-- 📊 Summary Panel -->
        <!--   <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    Margin="10">
            <TextBlock Text="Total Invoice: ₹"
                       FontWeight="Bold" />
            <TextBlock Text="{Binding TotalInvoiceAmount}"
                       Margin="5,0" />
            <TextBlock Text="Paid: ₹"
                       FontWeight="Bold"
                       Margin="20,0" />
            <TextBlock Text="{Binding TotalVoucherAmount}"
                       Margin="5,0" />
            <TextBlock Text="Balance: ₹"
                       FontWeight="Bold"
                       Margin="20,0" />
            <TextBlock Text="{Binding BalanceAmount}"
                       Foreground="Red"
                       FontWeight="Bold"
                       Margin="5,0" />
            <Button Content="Save Invoice Vouchers"
                    Command="{Binding SaveCommand}"
                    Background="Green"
                    Foreground="White"
                    Width="150"
                    Height="30"
                    Margin="20,0" />
        </StackPanel> -->

    </Grid>
</UserControl>