        <!-- 1️⃣ Search Panel -->
        <StackPanel Orientation="Horizontal"
                    Margin="5"
                    Grid.Row="0">
            <dxe:ComboBoxEdit ItemsSource="{Binding Customers}"
                              SelectedItem="{Binding SelectedCustomer}"
                              Width="150" />
            <dxe:DateEdit EditValue="{Binding SearchOption.From}"
                          Width="120"
                          Margin="5,0" />
            <dxe:DateEdit EditValue="{Binding SearchOption.To}"
                          Width="120"
                          Margin="5,0" />
            <Button Content="Refresh"
                    Command="{Binding RefreshInvoicesCommand}"
                    Margin="10,0" />
        </StackPanel>
        
        <Grid Grid.Row="1"
              Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left: Invoice header list -->
            <dxg:GridControl ItemsSource="{Binding OsInvoices}"
                             AutoGenerateColumns="None"
                             SelectedItem="{Binding SelectedInvoice}">
                <dxmvvm:Interaction.Behaviors>
                    <dxmvvm:EventToCommand EventName="SelectedItemChanged"
                                           Command="{Binding SelectionInvoiceChangedCommand}" />
                </dxmvvm:Interaction.Behaviors>
                <dxg:GridControl.View>
                    <dxg:TableView ShowGroupPanel="False" />
                </dxg:GridControl.View>

                <dxg:GridControl.Columns>
                    <dxg:GridColumn FieldName="InvNbr"
                                    Header="Invoice #"
                                    ReadOnly="True"
                                    Width="70" />
                    <dxg:GridColumn FieldName="InvDate"
                                    Header="Date"
                                    ReadOnly="True"
                                    Width="100" />
                    <dxg:GridColumn FieldName="GrossRcbAmount"
                                    Header="Total Amount"
                                    Width="100">
                        <dxg:GridColumn.EditSettings>
                            <dxe:TextEditSettings MaskType="Numeric"
                                                  MaskUseAsDisplayFormat="True"
                                                  Mask="C2" />
                        </dxg:GridColumn.EditSettings>
                    </dxg:GridColumn>
                    <dxg:GridColumn FieldName="DiscountAmount"
                                    Header="Discount"
                                    Width="90">
                        <dxg:GridColumn.EditSettings>
                            <dxe:TextEditSettings MaskType="Numeric"
                                                  MaskUseAsDisplayFormat="True"
                                                  Mask="C2" />
                        </dxg:GridColumn.EditSettings>
                    </dxg:GridColumn>
                    <dxg:GridColumn FieldName="AmountPayable"
                                    Header="Receivable"
                                    Width="120">
                        <dxg:GridColumn.EditSettings>
                            <dxe:TextEditSettings MaskType="Numeric"
                                                  MaskUseAsDisplayFormat="True"
                                                  Mask="C2" />
                        </dxg:GridColumn.EditSettings>
                    </dxg:GridColumn>
                    <dxg:GridColumn FieldName="RecdAmount"
                                    Header="Received"
                                    Width="120">
                        <dxg:GridColumn.EditSettings>
                            <dxe:TextEditSettings MaskType="Numeric"
                                                  MaskUseAsDisplayFormat="True"
                                                  Mask="C2" />
                        </dxg:GridColumn.EditSettings>
                    </dxg:GridColumn>
                    <dxg:GridColumn FieldName="InvBalance"
                                    Header="Balance"
                                    Width="100">
                        <dxg:GridColumn.EditSettings>
                            <dxe:TextEditSettings MaskType="Numeric"
                                                  MaskUseAsDisplayFormat="True"
                                                  Mask="C2" />
                        </dxg:GridColumn.EditSettings>
                    </dxg:GridColumn>
                    <dxg:GridColumn FieldName="PaymentDueDate"
                                    Header="Due Date"
                                    ReadOnly="True"
                                    Width="90" />
                </dxg:GridControl.Columns>
            </dxg:GridControl>

            <dxg:GridControl Grid.Column="1"
                             ItemsSource="{Binding InvReceipts}"
                             AutoGenerateColumns="None">
                <dxg:GridControl.View>
                    <dxg:TableView ShowGroupPanel="False" />
                </dxg:GridControl.View>
                <dxg:GridControl.Columns>
                    <dxg:GridColumn FieldName="TransactionType"
                                    Header="Type" />
                    <dxg:GridColumn FieldName="AdjustedAmount"
                                    Header="Amount" />
                    <dxg:GridColumn FieldName="TransDesc"
                                    Header="Description" />
                </dxg:GridControl.Columns>
                <!-- your voucher columns here -->
            </dxg:GridControl>
        </Grid>

        <!-- 3️⃣ Summary Row -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="45,5,0,5"
                    Grid.Row="2"
                    Grid.Column="1">
            <TextBlock Text="Total Invoice: ₹"
                       FontWeight="Bold" />
            <TextBlock Text="{Binding TotalInvoiceAmount}"
                       Margin="5,0" />
            <TextBlock Text="Paid: ₹"
                       FontWeight="Bold"
                       Margin="20,0" />
            <TextBlock Text="{Binding TotalVoucherAmount}"
                       Margin="5,0" />
            <TextBlock Text="Balance: ₹"
                       FontWeight="Bold"
                       Margin="20,0" />
            <TextBlock Text="{Binding BalanceAmount}"
                       Foreground="Red"
                       Margin="5,0" />
            <Button Content="Save Invoice Vouchers"
                    Command="{Binding SaveCommand}"
                    Background="Green"
                    Foreground="White"
                    Width="100"
                    Height="30" />
        </StackPanel>

    </Grid>

</UserControl>
