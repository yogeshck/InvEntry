<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InvEntry.Views"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
             x:Class="InvEntry.Views.VoucherEntryView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <dxlc:LayoutGroup Orientation="Vertical" View="GroupBox" Header="Voucher Entry">
            <dxlc:LayoutGroup HorizontalAlignment="Left" 
                        Margin="10" VerticalAlignment="Top" 
                        Orientation="Horizontal" View="GroupBox" Header="Invoice Amount"
                        IsCollapsible="True">
                <dxlc:LayoutGroup Orientation="Vertical" >
                    <dxlc:LayoutGroup View="GroupBox" Header="Voucher" Orientation="Vertical">
                        <dxlc:LayoutItem Label="Number" Width="300" FontSize="14" Margin="0,17,0,0">
                            <dxe:TextEdit Height="42" Width="250"  FontSize="16" Text="Nbr" />
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="Date  " Width="300"  FontSize="14">
                            <dxe:DateEdit Height="42" Width="250"
                                          EditValue="{Binding Header.InvDate}" IsReadOnly="True"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="Type" FontSize="14" Margin="0,17,0,0">
                            <dxe:TextEdit Height="42" Width="250"  FontSize="16" Text="Cash" />
                        </dxlc:LayoutItem>
                    </dxlc:LayoutGroup>
                    <dxlc:LayoutItem Label="Amount" FontSize="14" Margin="0,17,0,0">
                        <dxe:TextEdit Height="42" Width="250"  FontSize="16" Text="Amount" />
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Label="Notes" FontSize="14" Margin="0,17,0,0">
                        <dxe:TextEdit Height="42" Width="250"  FontSize="16" Text="Notes" />
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>
            </dxlc:LayoutGroup>
        </dxlc:LayoutGroup>

    </Grid>
</UserControl>
