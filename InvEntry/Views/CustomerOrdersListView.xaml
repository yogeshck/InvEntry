<dxwui:NavigationPage x:Class="InvEntry.Views.CustomerOrdersListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
    xmlns:local="clr-namespace:InvEntry.Views"
    xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    mc:Ignorable="d"
    xmlns:viewmodels="clr-namespace:InvEntry.ViewModels"
             xmlns:behavior="clr-namespace:InvEntry.Behavior"
             xmlns:ext="clr-namespace:InvEntry.Extension" xmlns:dxp="clr-namespace:DevExpress.Xpf.Printing;assembly=DevExpress.Xpf.Printing.v24.2"
                      d:DataContext="{d:DesignInstance Type=viewmodels:CustomerOrderListViewModel}"
                      DataContext="{ext:DISource Type=viewmodels:CustomerOrderListViewModel}"
             d:DesignHeight="450" HorizontalAlignment="Left" Width="1400">

    <Grid Width="1100"
          HorizontalAlignment="Left">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <dxb:BarContainerControl>
            <dxb:MainMenuControl>
                <dxb:BarEditItem EditValue="{Binding SearchOption.From}"
                                 EditWidth="120"
                                 Content="From Date">
                    <dxb:BarEditItem.EditSettings>
                        <dxe:DateEditSettings AllowDefaultButton="True" />
                    </dxb:BarEditItem.EditSettings>
                </dxb:BarEditItem>
                <dxb:BarEditItem EditValue="{Binding SearchOption.To}"
                                 EditWidth="120"
                                 Content="To Date">
                    <dxb:BarEditItem.EditSettings>
                        <dxe:DateEditSettings AllowDefaultButton="True"
                                              MaxValue="{Binding Today}" />
                    </dxb:BarEditItem.EditSettings>
                </dxb:BarEditItem>
                <dxb:BarButtonItem x:Name="btnRefresh"
                                   Content="Refresh"
                                   Glyph="{dx:DXImage 'Images/Actions/Refresh_32x32.png'}"
                                   GlyphSize="Large"
                                   Command="{Binding RefreshCustomerOrderCommand}" />
                <dxb:BarItemSeparator Margin="2,0,2,0" />
                <dxb:BarButtonItem x:Name="btnPrintGrid"
                                   Content="Export"
                                   Glyph="{dx:DXImage 'Images/Print/PrintViaPDF_32x32.png'}"
                                   GlyphSize="Large"
                                   BarItemDisplayMode="ContentAndGlyph"
                                   GlyphAlignment="Top" />
                <dxb:BarItemSeparator Margin="2,0,2,0" />
                <dxb:BarButtonItem x:Name="btnPrintInvoice"
                                   Content="Print"
                                   Glyph="{dx:DXImage 'Images/Print/PrintViaPDF_32x32.png'}"
                                   GlyphSize="Large"
                                   Alignment="Far"
                                   BarItemDisplayMode="ContentAndGlyph"
                                   GlyphAlignment="Top"
                                   Command="{Binding PrintInvoiceCommand}" />
            </dxb:MainMenuControl>
        </dxb:BarContainerControl>

        <dxg:GridControl Grid.Row="1"
                         ItemsSource="{Binding CustomerOrder}"
                         AutoGenerateColumns="None"
                         MinHeight="500"
                         Height="620"
                         MaxHeight="1100"
                         MinWidth="700"
                         Width="1400"
                         SelectedItem="{Binding SelectedOrder}"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top">
            <dxmvvm:Interaction.Behaviors>
                <dxmvvm:EventToCommand EventName="SelectedItemChanged"
                                       Command="{Binding SelectionChangedCommand}" />
                <behavior:PrintGridBehavior BarButtonItem="{Binding ElementName=btnPrintGrid}" />
            </dxmvvm:Interaction.Behaviors>
            <dxg:GridControl.View>
                <dxg:TableView  x:Name="tableView"
                                AllowBestFit="False"
                                NavigationStyle="Row"
                                AllowEditing="False"
                                AllowGrouping="False"
                                ShowGroupPanel="False"
                                ShowAutoFilterRow="True"
                                FontSize="15"
                                AutoWidth="False"
                                ShowTotalSummary="True"
                                EditorButtonShowMode="ShowOnlyInEditor">
                    <!--     <dxg:TableView.ColumnMenuCustomizations>
                        <dxb:RemoveAction ElementName="{x:Static dxg:DefaultColumnMenuItemNames.ColumnChooser}" />
                    </dxg:TableView.ColumnMenuCustomizations> -->
                </dxg:TableView>
            </dxg:GridControl.View>
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="OrderNbr"
                                Header="Order #"
                                ReadOnly="True"
                                Width="100" />
                <dxg:GridColumn FieldName="OrderDate"
                                Header="Order Date"
                                ReadOnly="True"
                                Width="90" />
                <dxg:GridColumn FieldName="TotalOrderAmount"
                                Header="Order Amount"
                                Width="120">
                    <dxg:GridColumn.EditSettings>
                        <dxe:TextEditSettings MaskType="Numeric"
                                              MaskUseAsDisplayFormat="True"
                                              Mask="C2" />
                    </dxg:GridColumn.EditSettings>
                </dxg:GridColumn>
                <dxg:GridColumn Header="Payment"
                                FieldName="PaymentStatus"
                                Width="100">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="{Binding PaymentStatusBackground}"
                                    Padding="5"
                                    CornerRadius="3">
                                <TextBlock Text="{Binding PaymentStatusText}"
                                           Foreground="White"
                                           HorizontalAlignment="Center" />
                            </Border>
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>
                </dxg:GridColumn>
                <dxg:GridColumn FieldName="AmountPayable"
                                Header="Receivable"
                                Width="90">
                    <dxg:GridColumn.EditSettings>
                        <dxe:TextEditSettings MaskType="Numeric"
                                              MaskUseAsDisplayFormat="True"
                                              Mask="C2" />
                    </dxg:GridColumn.EditSettings>
                </dxg:GridColumn>
                <dxg:GridColumn FieldName="RecdAmount"
                                Header="Received"
                                Width="120">
                    <dxg:GridColumn.EditSettings>
                        <dxe:TextEditSettings MaskType="Numeric"
                                              MaskUseAsDisplayFormat="True"
                                              Mask="C2" />
                    </dxg:GridColumn.EditSettings>
                </dxg:GridColumn>
                <dxg:GridColumn FieldName="InvBalance"
                                Header="Balance"
                                Width="120">
                    <dxg:GridColumn.EditSettings>
                        <dxe:TextEditSettings MaskType="Numeric"
                                              MaskUseAsDisplayFormat="True"
                                              Mask="C2" />
                    </dxg:GridColumn.EditSettings>
                </dxg:GridColumn>
                <dxg:GridColumn FieldName="InvRefund"
                                Header="Refund"
                                Width="70">
                    <dxg:GridColumn.EditSettings>
                        <dxe:TextEditSettings MaskType="Numeric"
                                              MaskUseAsDisplayFormat="True"
                                              Mask="C2" />
                    </dxg:GridColumn.EditSettings>
                </dxg:GridColumn>
                <dxg:GridColumn FieldName="PaymentDueDate"
                                Header="Due Date"
                                ReadOnly="True"
                                Width="90" />
                <dxg:GridColumn Header="Fulfillment"
                            FieldName="FulfillmentStatus"
                            Width="100">
                <dxg:GridColumn.CellTemplate>
                    <DataTemplate>
                        <Border Background="{Binding FulfillmentStatusBackground}"
                                Padding="5"
                                CornerRadius="3">
                            <TextBlock Text="{Binding FulfillmentStatusText}"
                                       Foreground="White"
                                       HorizontalAlignment="Center" />
                        </Border>
                    </DataTemplate>
                </dxg:GridColumn.CellTemplate>
            </dxg:GridColumn>
            </dxg:GridControl.Columns>
        </dxg:GridControl>
    </Grid>
</dxwui:NavigationPage>