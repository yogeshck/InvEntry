<UserControl x:Class="InvEntry.Views.ProductStockTakingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:viewmodels="clr-namespace:InvEntry.ViewModels"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:i="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:ei="http://schemas.microsoft.com/xaml/behaviors/2010/interactions"
             xmlns:ext="clr-namespace:InvEntry.Extension"
             xmlns:behavior="clr-namespace:InvEntry.Behavior"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodels:ProductStockTakingViewModel}"
             DataContext="{ext:DISource Type=viewmodels:ProductStockTakingViewModel}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <!-- This row constrains the grids -->
        </Grid.RowDefinitions>

        <!-- COUNTER PANEL -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                <TextBlock Text="SCANNED" FontSize="18" FontWeight="Bold" Foreground="Wheat"/>
                <TextBlock Text="{Binding TotalScanned}" FontSize="48" FontWeight="Bold" Foreground="DarkBlue"/>
            </StackPanel>

            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                <TextBlock Text="MISSING" FontSize="18" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="{Binding MissingCount}" FontSize="48" FontWeight="Bold">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="Green"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding MissingCount}" Value="0">
                                    <Setter Property="Foreground" Value="Green"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding MissingCount}" Value="1">
                                    <Setter Property="Foreground" Value="Red"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </Grid>

        <!-- BARCODE INPUT -->
        <dxe:TextEdit Grid.Row="1"
                      EditValue="{Binding BarcodeInput, UpdateSourceTrigger=PropertyChanged}"
                      Name="BarcodeInput"
                      EditValuePostMode="Delayed">
            <dxmvvm:Interaction.Behaviors>
                <dxmvvm:EventToCommand EventName="EditValueChanged"
                                       Command="{Binding ProcessScanCommand}"
                                       PassEventArgsToCommand="True"/>
            </dxmvvm:Interaction.Behaviors>
        </dxe:TextEdit>

        <!-- TWO GRIDS SIDE BY SIDE -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Left Grid: Unavailable Items -->
            <dxg:GridControl Grid.Column="0"
                             ItemsSource="{Binding UnavailableItems}"
                             AutoGenerateColumns="None"
                             MinHeight="200">
                <dxg:GridControl.View>
                    <dxg:TableView AllowEditing="False"
                                   ShowGroupPanel="True"
                                   ShowAutoFilterRow="True"
                                   AutoWidth="False"
                                   ShowTotalSummary="True"
                                   RowMinHeight="30"/>
                </dxg:GridControl.View>
                <dxg:GridControl.Columns>
                    <dxg:GridColumn FieldName="Barcode" Header="Barcode" Width="110"/>
                    <dxg:GridColumn FieldName="Category" Header="Category" Width="90"/>
                    <dxg:GridColumn FieldName="NetWeight" Header="Net" Width="100"/>
                </dxg:GridControl.Columns>
            </dxg:GridControl>

            <!-- Right Grid: Available Items -->
            <dxg:GridControl Grid.Column="1"
                             ItemsSource="{Binding ProductStockGridList}"
                             AutoGenerateColumns="None"
                             MinHeight="200">
                <dxg:GridControl.View>
                    <dxg:TableView AllowEditing="False"
                                   ShowGroupPanel="True"
                                   ShowAutoFilterRow="True"
                                   AutoWidth="False"
                                   ShowTotalSummary="True"
                                   RowMinHeight="30"/>
                </dxg:GridControl.View>
                <dxg:GridControl.Columns>
                    <dxg:GridColumn FieldName="ProductSku" Header="Product ID" Width="110"/>
                    <dxg:GridColumn FieldName="Category" Header="Category" Width="90"/>
                    <dxg:GridColumn FieldName="GrossWeight" Header="Gross" Width="100"/>
                    <dxg:GridColumn FieldName="StoneWeight" Header="Stone" Width="100"/>
                    <dxg:GridColumn FieldName="NetWeight" Header="Net" Width="100"/>
                </dxg:GridControl.Columns>
            </dxg:GridControl>
        </Grid>
    </Grid>
</UserControl>