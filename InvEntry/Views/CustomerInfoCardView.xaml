<UserControl x:Class="InvEntry.Views.CustomerInfoCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InvEntry.Views"
             mc:Ignorable="d" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             Background="Transparent">
    
    <Border Background="White"
            CornerRadius="8"
            Padding="20"
            BorderBrush="#E5E7EB"
            BorderThickness="1">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT : Primary Info -->
            <StackPanel Grid.Column="0" Margin="0,0,15,0">

                <TextBlock Text="Customer"
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="0,0,0,15"/>

                <TextBlock Text="Mobile"/>
                <dxe:TextEdit EditValue="{Binding MobileNumber}"
                              FontSize="15"
                              Height="32"
                              Margin="0,5,0,10" Width="262"/>

                <TextBlock Text="Customer Name"/>
                <dxe:TextEdit EditValue="{Binding CustomerName}"
                              Height="28"/>

                <TextBlock Text="Customer Code"
                           Margin="0,10,0,0"/>
                <dxe:TextEdit EditValue="{Binding CustomerCode}"
                              IsReadOnly="True"/>
            </StackPanel>

            <!-- CENTER : Address -->
            <StackPanel Grid.Column="1" Margin="0,0,15,0">

                <TextBlock Text="Address"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <dxe:MemoEdit EditValue="{Binding AddressLine1}"
                              Height="60"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <StackPanel Width="150">
                        <TextBlock Text="City"/>
                        <dxe:TextEdit EditValue="{Binding City}"/>
                    </StackPanel>

                    <StackPanel Width="150" Margin="15,0,0,0">
                        <TextBlock Text="State"/>
                        <dxe:TextEdit EditValue="{Binding State}"/>
                    </StackPanel>

                    <StackPanel Width="100" Margin="15,0,0,0">
                        <TextBlock Text="Pin"/>
                        <dxe:TextEdit EditValue="{Binding Pincode}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- RIGHT : Financial Summary -->
            <StackPanel Grid.Column="2">

                <TextBlock Text="Account Info"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Credit Limit"/>
                <dxe:TextEdit EditValue="{Binding CreditLimit}"
                              IsReadOnly="True"/>

                <TextBlock Text="Current Balance"
                           Margin="0,10,0,0"/>
                <dxe:TextEdit EditValue="{Binding CurrentBalance}"
                              IsReadOnly="True"
                              FontWeight="Bold"
                              Foreground="#B91C1C"/>

                <TextBlock Text="Last Purchase"
                           Margin="0,10,0,0"/>
                <dxe:DateEdit EditValue="{Binding LastPurchaseDate}"
                              IsReadOnly="True"/>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
