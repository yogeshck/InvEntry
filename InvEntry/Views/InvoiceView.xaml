<UserControl x:Class="InvEntry.Views.InvoiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm" 
             xmlns:local="clr-namespace:InvEntry.Views"
             xmlns:viewmodels="clr-namespace:InvEntry.ViewModels"
             xmlns:ext="clr-namespace:InvEntry.Extension"
             d:DataContext="{ext:DISource Type=viewmodels:InvoiceViewModel}"
             DataContext="{ext:DISource Type=viewmodels:InvoiceViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <sys:String x:Key="Invl">InvoiceLine</sys:String>
    </UserControl.Resources>
    <Grid>
        <dxlc:LayoutControl>
            <dxlc:LayoutGroup Orientation="Vertical" Visibility="{Binding HeaderView, Converter={dxmvvm:BooleanToVisibilityConverter}}">
                <dxlc:LayoutGroup Orientation="Vertical">
                    <dxlc:LayoutGroup>
                        
                    </dxlc:LayoutGroup>
                    <dxlc:LayoutGroup HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top" Orientation="Vertical">
                        <dxlc:LayoutItem Label="Advance Amount">
                            <dxe:TextEdit EditValue="{Binding Header.AdvanceAdj}" Width="200"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="RD Amount">
                            <dxe:TextEdit EditValue="{Binding Header.RdAmountAdj}" Width="200"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="Old Gold Amount (Rs)">
                            <dxe:TextEdit EditValue="{Binding Header.OldGoldAmount}" Width="200"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="Old Silver Amoount (Rs)">
                            <dxe:TextEdit EditValue="{Binding Header.OldSilverAmount}" Width="200"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="Discount">
                            <dxe:TextEdit EditValue="{Binding Header.DiscountAmount}" Width="200"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="Round Off">
                            <dxe:TextEdit EditValue="{Binding RoundOff}" Width="200" IsReadOnly="True"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="Grand Total">
                            <dxe:TextEdit EditValue="{Binding Header.AmountPayable}" Width="200" IsReadOnly="True"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="Amount Received">
                            <dxe:TextEdit EditValue="{Binding Header.RecdAmount}" Width="200"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="Balance Amount">
                            <dxe:TextEdit EditValue="{Binding Header.InvBalance}" Width="200" IsReadOnly="True"/>
                        </dxlc:LayoutItem>
                    </dxlc:LayoutGroup>
                    <dxlc:LayoutGroup HorizontalAlignment="Right" Margin="10" VerticalAlignment="Bottom">
                        <dx:SimpleButton Content="Submit" Height="30" Width="100" Command="{Binding CreateInvoiceCommand}"/>
                        <dx:SimpleButton Content="GoBack" Height="30" Width="100" Command="{Binding ToggleVisibilityCommand}"/>
                    </dxlc:LayoutGroup>
                </dxlc:LayoutGroup>
            </dxlc:LayoutGroup>
            <dxlc:LayoutGroup Orientation="Vertical" Visibility="{Binding LineView, Converter={dxmvvm:BooleanToVisibilityConverter}}">
                <dxlc:LayoutGroup Orientation="Horizontal" Margin="10">
                    <dxlc:LayoutGroup View="GroupBox" Header="Customer Details"
                                      HorizontalAlignment="Left" GroupBoxDisplayMode="Light"
                                      ItemLabelsAlignment="Local" Margin="10" >
                        <dxlc:LayoutItem Label="Mobile" LabelPosition="Top">
                            <dxe:TextEdit EditValue="{Binding CustomerPhoneNumber}" Width="200" EditValuePostDelay="500" AcceptsTab="True">
                                <dxmvvm:Interaction.Behaviors>
                                    <dxmvvm:EventToCommand EventName="EditValueChanged" Command="{Binding FetchCustomerCommand}"/>
                                </dxmvvm:Interaction.Behaviors>
                            </dxe:TextEdit>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutGroup>
                            <dxlc:LayoutItem Label="Name" LabelPosition="Top">
                                <dxe:TextEdit EditValue="{Binding Customer.Name}" Width="200" AcceptsTab="True"/>
                            </dxlc:LayoutItem>
                            <dxlc:LayoutItem Label="Address" LabelPosition="Top">
                                <dxe:TextEdit EditValue="{Binding Customer.LedgerName}" Width="200" AcceptsTab="True"/>
                            </dxlc:LayoutItem>
                        </dxlc:LayoutGroup>
                    </dxlc:LayoutGroup>
                    <!--<dxlc:LayoutGroup  GroupBoxDisplayMode="Light" View="Group" Orientation="Vertical"
                            HorizontalAlignment="Left" Margin="5" 
                            Header="Invoice Header" Width="500">
                        <dxlc:LayoutItem Label="Payment Mode">
                            <dxe:TextEdit EditValue="{Binding Header.PaymentMode}" Width="200"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="Discount Amount">
                            <dxe:TextEdit EditValue="{Binding Header.DiscountAmount}" Width="200"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="Discount Percent (%)">
                            <dxe:TextEdit EditValue="{Binding Header.DiscountAmount}" Width="200"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="Paid Amount">
                            <dxe:TextEdit EditValue="{Binding Header.RecdAmount}" Width="200"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="Balance Amount">
                            <dxe:TextEdit EditValue="{Binding Header.InvBalance}" Width="200"/>
                        </dxlc:LayoutItem>
                    </dxlc:LayoutGroup>-->
                    <!--<dxlc:LayoutGroup Orientation="Vertical" View="Group" GroupBoxDisplayMode="Light"
                                      ItemLabelsAlignment="Local">
                        <dxlc:LayoutItem Label="Old Gold Amount">
                            <StackPanel Orientation="Horizontal" Width="300" Margin="10" Height="30">
                                <dx:SimpleButton Glyph="{dx:DXImage 'Images/Maps/WeightedPies_32x32.png'}"
                                                 Command="{Binding AddOldJewelCommand}" CommandParameter="Gold"/>
                                <dxe:TextEdit EditValue="{Binding Header.OldGoldAmount}" Width="270"/>
                            </StackPanel>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="Old Silver Amount">
                            <StackPanel Orientation="Horizontal" Width="300" Margin="10" Height="30">
                                <dx:SimpleButton Glyph="{dx:DXImage 'Images/Maps/WeightedPies_32x32.png'}" 
                                                 Command="{Binding AddOldJewelCommand}" CommandParameter="Silver"/>
                                <dxe:TextEdit EditValue="{Binding Header.OldSilverAmount}" Width="270"/>
                            </StackPanel>
                        </dxlc:LayoutItem>
                    </dxlc:LayoutGroup>-->
                </dxlc:LayoutGroup>
                <dxlc:LayoutGroup Orientation="Vertical">
                    <dxlc:LayoutGroup Orientation="Horizontal">
                        <dxlc:LayoutItem Label="Product ID">
                            <StackPanel Orientation="Horizontal">
                                <dxe:TextEdit EditValue="{Binding ProductIdUI}" Width="100"/>
                                <dx:SimpleButton Glyph="{dx:DXImage 'SvgImages/Icon Builder/Actions_AddCircled.svg'}" 
                                                 Command="{Binding FetchProductCommand}" BorderThickness="0" Background="Transparent"/>
                            </StackPanel>
                        </dxlc:LayoutItem>
                    </dxlc:LayoutGroup>
                    <dxg:GridControl ItemsSource="{Binding Header.Lines}" DeleteKeyBehavior="DeleteFocusedRow">
                        <dxg:GridControl.Columns>
                                <dxg:GridColumn FieldName="ProductId" Header="Product Id"/>
                                <dxg:GridColumn FieldName="ProductName"/>
                                <dxg:GridColumn FieldName="ProductDesc"/>
                            <dxg:GridColumn FieldName="ProductPurity" Header="Purity"/>
                            <dxg:GridColumn FieldName="ProdQty" Header="Quantity"/>
                            <dxg:GridColumn FieldName="ProdGrossWeight" Header="Gross Weight"/>
                            <dxg:GridColumn FieldName="ProdStoneWeight" Header="Stone Weight"/>
                            <dxg:GridColumn FieldName="ProdNetWeight" Header="Net Weight"/>
                            <dxg:GridColumn FieldName="VaAmount" Header="VA Amount (Rs)" />
                            <dxg:GridColumn FieldName="InvlTaxableAmount" Header="Taxable Amount (Rs)" />
                        </dxg:GridControl.Columns>
                        <dxg:GridControl.TotalSummary>
                            <dxg:GridSummaryItem SummaryType="Sum" Alignment="Default"
                                                 DisplayFormat="Total = {0}"
                                                 FieldName="InvlTaxableAmount"/>
                        </dxg:GridControl.TotalSummary>
                            <dxg:GridControl.View>
                            <dxg:TableView AllowGrouping="False"
                               AllowBestFit="True" ShowGroupPanel="False" TotalSummaryPosition="Bottom">
                                <dxmvvm:Interaction.Behaviors>
                                    <dxmvvm:EventToCommand EventName="CellValueChanged" 
                                                           Command="{Binding CellUpdateCommand}"
                                                           PassEventArgsToCommand="True"/>
                                </dxmvvm:Interaction.Behaviors>
                            </dxg:TableView>
                        </dxg:GridControl.View>
                        </dxg:GridControl>
                </dxlc:LayoutGroup>
                <dxlc:LayoutGroup HorizontalAlignment="Right" Margin="10">
                    <dx:SimpleButton Content="Submit" Height="30" Width="100" Command="{Binding ToggleVisibilityCommand}"/>
                </dxlc:LayoutGroup>
            </dxlc:LayoutGroup>
        </dxlc:LayoutControl>
    </Grid>
</UserControl>
 